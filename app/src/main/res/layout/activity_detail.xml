<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_secondary"
    tools:context=".Detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100sp"
            >

            <!--  Header Section  -->
            <RelativeLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark"
                android:background="@drawable/radius_card"
                >

                <!--  Image Section  -->
                <ImageView
                    android:id="@+id/image_section"
                    android:layout_width="500sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/bali_big"
                    android:padding="0sp"
                    />

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="30sp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                <!--  Info Section  -->
                <LinearLayout
                    android:layout_marginTop="25sp"
                    android:paddingBottom="30sp"
                    android:paddingHorizontal="25sp"
                    android:layout_below="@id/image_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--  Location  -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali, Indonesia"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/primary"
                        android:textSize="24sp"
                        android:lineHeight="3sp"
                        android:layout_marginBottom="5sp"
                        />

                    <!--  Details  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        >

                        <!--  Detail 1  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--  Icon  -->
                            <RelativeLayout
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/radius_btn"
                                android:backgroundTint="@color/secondary"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>

                            <!--  Label  -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.92"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:lineHeight="3sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginHorizontal="20sp"
                                android:layout_marginTop="10sp"
                                />

                        </LinearLayout>

                        <!--  Detail 1  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--  Icon  -->
                            <RelativeLayout
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/radius_btn"
                                android:backgroundTint="@color/secondary"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cloud"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>

                            <!--  Label  -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27Â°C"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:lineHeight="3sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginHorizontal="20sp"
                                android:layout_marginTop="10sp"
                                />

                        </LinearLayout>

                        <!--  Detail 1  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--  Icon  -->
                            <RelativeLayout
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/radius_btn"
                                android:backgroundTint="@color/secondary"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_plane"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>

                            <!--  Label  -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9 Jan"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:lineHeight="3sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginHorizontal="20sp"
                                android:layout_marginTop="10sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!--  Description Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="25sp"
                android:paddingVertical="30sp"
                android:background="@color/dark_secondary"
                >

                <!--  Label  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:lineHeight="3sp"
                    android:layout_marginBottom="5sp"
                    />

                <!--  Description  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:lineHeight="25sp"
                    android:text="Bali is famous for beaches, countless waves for surfing scuba diving, natiral sites to visit and explore tremely fascinating Hindus culture with colorfuls ceremonies and magnificent temples gifted artists the producing."
                    android:textColor="@color/white_700"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--  Book Now Section  -->
    <RelativeLayout
        android:id="@+id/book_now_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dark"
        android:layout_alignParentBottom="true"
        android:paddingVertical="20sp"
        android:paddingHorizontal="27sp"
        >

        <!--  Price  -->
        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--  Label  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting From"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:lineHeight="3sp"
                />

            <!--  Price  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500 - 750"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:lineHeight="3sp"
                />

        </LinearLayout>

        <!--  Book Button  -->
        <Button
            android:id="@+id/btn_book"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:background="@drawable/radius_btn"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>